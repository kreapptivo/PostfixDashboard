{
  "name": "postfix-dashboard-hooks",
  "private": true,
  "version": "2.3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/kreapptivo/PostfixDashboard"
  },
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "prepare": "simple-git-hooks",
    "pre-commit": "npm --prefix backend run -s format:staged && npm --prefix frontend run -s format:staged",
    "sync-versions": "node scripts/sync-versions.js",
    "version": "npm run sync-versions"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "simple-git-hooks": "^2.13.1"
  },
  "simple-git-hooks": {
    "pre-commit": "npm run -s pre-commit",
    "commit-msg": "npx commitlint --edit $1"
  }
}
