# Backend Environment Configuration
# Copy this file to .env.production and update values for production

# Server Configuration
PORT=3001
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=false

# Postfix Configuration
POSTFIX_LOG_PATH=/var/log/mail.log
POSTFIX_CONFIG_PATH=/etc/postfix/main.cf

# Authentication
TOKEN_SECRET=your-secret-key-change-this-in-production
TOKEN_EXPIRY_HOURS=24
DASHBOARD_USER=admin@localhost
DASHBOARD_PASSWORD=your-secure-password

# AI Provider Configuration
# Options: 'gemini' or 'ollama'
AI_PROVIDER=ollama

# Google Gemini Configuration (if using Gemini)
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-2.0-flash-exp

# Ollama Configuration (if using Ollama)
OLLAMA_API_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2:latest

# AI Analysis Configuration
AI_ANALYSIS_MAX_LOGS=200
AI_ANALYSIS_DEFAULT_LOGS=50
AI_ANALYSIS_TIMEOUT=60000

# CORS Configuration
# Update these with your actual domain/IP for production
ALLOWED_ORIGINS=http://localhost,http://192.168.5.2,https://yourdomain.com
