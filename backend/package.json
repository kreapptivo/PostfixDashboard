{
  "name": "postfix-dashboard-backend",
  "version": "1.0.0",
  "description": "Backend server for the Postfix Monitoring Dashboard",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "pm2-start": "pm2-runtime start server.js",
    "test": "node --test",
    "test:ci": "c8 --reporter=lcov --reporter=text npm test",
    "lint": "eslint . --ext .js --max-warnings 0",
    "lint:fix": "eslint . --ext .js --max-warnings 0 --fix",
    "format": "prettier . --check",
    "format:fix": "prettier . --write",
    "format:staged": "pretty-quick --staged --pattern \"backend/**/*.{js,ts,tsx,jsx,json,md,css,html}\""
  },
  "keywords": [
    "postfix",
    "dashboard",
    "monitoring",
    "nodejs"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@google/genai": "^1.25.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "pm2": "^6.0.14"
  },
  "devDependencies": {
    "@eslint/js": "^9.14.0",
    "c8": "^10.1.3",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^14.0.0",
    "prettier": "^3.7.4",
    "pretty-quick": "^4.2.2",
    "supertest": "^7.1.3"
  }
}
